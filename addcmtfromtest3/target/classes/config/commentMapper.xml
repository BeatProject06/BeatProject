<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="com.hb.major.model.comment.CommentDao">
  
  	<select id="getCommentList" parameterType="int" resultType="commentbean">
  		SELECT * FROM COMMENTS WHERE COMMENT_BOARD=#{value} ORDER BY COMMENT_DATE DESC;
  	</select>
  	
  	<insert id="commentInsertOne" parameterType="commentbean">
  		INSERT INTO COMMENTS(comment_board,comment_id,comment_nick,comment_date,comment_content ) VALUES (#{comment_board}, #{comment_id}, #{comment_nick}, NOW(), #{comment_content})
  	</insert>
  	
  	
  </mapper>